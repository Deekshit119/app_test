        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var gr_sheet = new GlideRecord("x_hdvi2_expense_sheet");
	var total_amount = 0;
	
	if(gr_sheet.get(current.expense)){
		var gr_line = new GlideRecord("x_hdvi2_expense_line");
		gr_line.addQuery("expense",current.expense);
		gr_line.query();
		while(gr_line.next()){
			total_amount += gr_line.refunded_amount;
		}
		gr_sheet.total_refunded_amount = total_amount;
		gr_sheet.update();
	}
	
	
})(current, previous);]]></script>
